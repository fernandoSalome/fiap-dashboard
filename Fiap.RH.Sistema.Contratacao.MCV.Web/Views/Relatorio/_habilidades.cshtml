@model Fiap.RH.Sistema.Contratacao.MCV.Web.ViewModels.RelatorioViewModel

<div class="row" id="habilidades">
    @{ int contador = 1; }
    @foreach(var h in Model.HabilidadesDoCandidato)
    {
        <div id="@h.IdOrdem" class="row">
            <div class="col-lg-3 text-right">
                <span class="lead">@contador</span>
            </div>
            <div class="col-lg-4">
                <select name="@h.IdOrdem" class = "form-control">
                    @foreach(var i in Model.Habilidades)
                    {
                        <option value="@i.Value" @(h.Habilidade.Nome == i.Text ? "selected='selected'" : "")>@i.Text</option>
                    }
                </select>
            </div>
            <div class="col-lg-3">
                <a class="btn btn-danger" onclick="removerHabilidade(@h.IdOrdem)"><i class="glyphicon glyphicon-trash"></i></a>
            </div>
        </div>
        contador++;
    }
</div>
<div class="row">
    <div class="col-lg-3"></div>
    <a class="btn btn-primary" href="/Relatorio/AdicionarHabilidade/@Model.Id"><i class="glyphicon glyphicon-plus"></i></a>
</div>