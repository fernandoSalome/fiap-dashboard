@model Fiap.RH.Sistema.Contratacao.MCV.Web.ViewModels.CursoViewModel

@{
    ViewBag.Title = "Listar Cursos";
    ViewBag.TitleMenu = "Curso";
}

<div class="col-xs-12">
    <div class="card">
        <div class="card-header" style="padding: 10px 20px; flex-direction: column;">
            <span style="font-size: 28px;">Cursos</span>
            <!--ActionLink para cadastrar fábricas-->
            @Html.ActionLink("Cadastrar Curso", "Cadastrar", "Curso", new { @class = "btn btn-xs btn-primary" })
        </div>

        @Helper.Message(Model.Mensagem, "alert alert-warning")

        <table id="CursoTable" class="datatable table table-striped primary" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var curso in Model.Cursos)
                {
                    <tr id="@curso.Id">
                        <td>@curso.Nome</td>
                        <td><a class="btn btn-info btn-xs" href="/Curso/Editar/@curso.Id"><i class="fa fa-pencil"></i></a>
                        <a onclick="removePeloId(@curso.Id)" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>



@section scripts
{
    <script src="~/Scripts/ViewModels/curso.js"></script>
    <script>
    $(document).ready(function () {
    var oTable = $('#CursoTable').dataTable({
    "aoColumnDefs": [
    { "bSortable": false, "aTargets": [0] }
    ],
    "aaSorting": [[1, 'asc']],
    "dom": '<"top"fl>rt<"bottom"ip><"clear">',
    "language": {
    "sEmptyTable": "Nenhum registro encontrado",
    "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
    "sInfoEmpty": "Mostrando 0 até 0 de 0 registros",
    "sInfoFiltered": "(Filtrados de _MAX_ registros)",
    "sInfoPostFix": "",
    "sInfoThousands": ".",
    "sLengthMenu": "_MENU_ resultados por página",
    "sLoadingRecords": "Carregando...",
    "sProcessing": "Processando...",
    "sZeroRecords": "Nenhum registro encontrado",
    "sSearch": "Pesquisar",
    "oPaginate": {
    "sNext": "Próximo",
    "sPrevious": "Anterior",
    "sFirst": "Primeiro",
    "sLast": "Último"
