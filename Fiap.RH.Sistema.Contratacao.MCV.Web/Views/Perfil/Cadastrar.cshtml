@model Fiap.RH.Sistema.Contratacao.MCV.Web.ViewModels.PerfilViewModel

@{
    ViewBag.Title = "Cadastrar Perfil";
    ViewBag.TitleMenu = "Perfil Profissional";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h2>Cadastrar Perfil</h2>
        </div>
        <div class="card-body">

            @Helper.Message(Model.Mensagem, "alert alert-warning")

            @using (Html.BeginForm("Cadastrar", "Perfil", FormMethod.Post, new { @class = "form form-horizontal", id = "formularioPerfil" }))
            {
                <div class="row">
                    <div class="col-md-6">
                        @Html.Partial("_formulario", Model)
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-6" style="margin-top: 25px;">
                        @Helper.Submit("Adicionar", "btn btn-success")
                    </div>
                </div>
            }
        </div>
    </div>
</div>
